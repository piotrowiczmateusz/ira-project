{
    "type": "object",
    "$schema": "http://json-schema.org/draft-03/schema",
    "description": "A single room object",
    "properties": {
        "id": {
            "type": "string",
            "required": true
        },
        "hotel": {
            "type": "string",
            "required": true
        },
        "type": {
            "type": "string",
            "required": true
        },
        "price": {
            "type": "integer",
            "required": true
        },
        "description": {
            "type": "string",
            "required": true
        }
    }
}
