{
    "type": "object",
    "$schema": "http://json-schema.org/draft-03/schema",
    "description": "A single reservation object",
    "properties": {
        "id": {
            "type": "string",
            "required": true
        },
        "user": {
            "type": "string",
            "required": true
        },
        "room": {
            "type": "string",
            "required": true
        },
        "reservationDate": {
            "type": "date",
            "required": true
        },
        "arrivalDate": {
            "type": "date",
            "required": true
        },
        "departureDate": {
            "type": "date",
            "required": true
        },
        "price": {
            "type": "integer",
            "required": true
        }
    }
}
