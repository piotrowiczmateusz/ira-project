{
    "type": "object",
    "$schema": "http://json-schema.org/draft-03/schema",
    "description": "Single user schema",
    "properties": {
        "id": {
            "type": "string",
            "required": true
        },
        "name": {
            "type": "string",
            "required": false
        },
        "surname": {
            "type": "string",
            "required": false
        },
        "email": {
            "type": "string",
            "required": true
        },
        "password": {
            "type": "string",
            "required": false
        }
    }
}
